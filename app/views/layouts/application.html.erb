<!DOCTYPE html>
<html>
  <head>
    <title>Kalibracja2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <<%= link_to 'Kalibracja', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <% if current_admin %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Formularze <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Lista sprzętu', equipment_index_path %></li>
			
			<li><%= link_to 'Miejsca użytkowania', places_path %></li>
			
			<li><%= link_to 'Metody weryfikacji', verifications_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Baza <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Nowy sprzęt', new_equipment_path %></li>
			
			<li><%= link_to 'Nowe miejsce', new_place_path %></li>
			
			<li><%= link_to 'Nowe metody weryfikacji', new_verification_path %></li>
          </ul>
        </li>
      </ul> 
      <form class="navbar-form navbar-left">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>  
    </form>
    <%end%>
      <ul class="nav navbar-nav navbar-right">
      	<% if current_admin %>
      	
      	<li><%= link_to ' Rejestruj', new_user_registration_path, class: 'glyphicon glyphicon-user' %></li>
      	<%end%>
      	<% if current_admin || current_user%>
        <li ><%= link_to ' Wyloguj', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %></li>
        <%else%>
        <li><%= link_to ' Loguj', new_user_session_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' Admin', new_admin_session_path, class: 'glyphicon glyphicon-log-in' %></li>
        <%end%>
      </ul>
    </div>
  </div>
</nav>
  
<div class="container">
	<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert alert-info") %>
	<% end %>
    <%= yield %>
</div>    
</body>
</html>
